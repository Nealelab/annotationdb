{{#if nodes}}
<div class="tab container" annotation="{{annotation}}">
	<div class="breadcrumb-container">
		<nav class="breadcrumb">
			<ul>
				{{{splitPath annotation}}}
			</ul>
		</nav>
		<div class="button-group">
			<a class="button is-danger delete-annotation" annotation="{{annotation}}">Delete annotation</a>
		</div>
	</div>
	<div class="field">
		<div class="label-container">
			<label class="label" annotation="{{annotation}}" field="title">Title</label>
			<div class="button-group">
				<a class="button is-warning edit" annotation="{{annotation}}" field="title">Edit</a>
			</div>
		</div>
		<div class="control">
			<textarea class="textarea locked oneline" readonly placeholder="Title" rows="0" annotation="{{annotation}}" field="title" original="{{title}}">{{title}}</textarea>
		</div>
	</div>
	<div class="field">
		<div class="label-container">
			<label class="label" annotation="{{annotation}}" field="annotation">Annotation</label>
			<div class="button-group">
				<a class="button is-warning edit" annotation="{{annotation}}" field="annotation">Edit</a>
			</div>
		</div>
		<div class="control">
			<textarea class="textarea locked oneline" readonly placeholder="Annotation" rows="0" annotation="{{annotation}}" field="annotation" original="{{annotation}}">{{annotation}}</textarea>
		</div>
	</div>
	<div class="field">
		<div class="label-container">
			<label class="label" annotation="{{annotation}}" field="db_file">Database file</label>
			<div class="button-group">
				<a class="button is-warning edit" annotation="{{annotation}}" field="db_file">Edit</a>
			</div>
		</div>
		<div class="control">
			<textarea class="textarea locked oneline" readonly placeholder="gs://annotationdb/..." rows="0" annotation="{{annotation}}" field="db_file" original="{{db_file}}">{{db_file}}</textarea>
		</div>
	</div>
	<div class="field">
		<div class="label-container">
			<label class="label" annotation="{{annotation}}" field="publication">Publication</label>
			<div class="button-group">
				<a class="button is-warning edit" annotation="{{annotation}}" field="publication">Edit</a>
			</div>
		</div>
		<div class="control">
			<textarea class="textarea locked" readonly placeholder="Annotation" rows="0" annotation="{{annotation}}" field="publication" original="{{publication}}">{{publication}}</textarea>
		</div>
	</div>
	<div class="field">
		<div class="label-container">
			<label class="label" annotation="{{annotation}}" field="description">Description</label>
			<div class="button-group">
				<a class="button is-warning edit" annotation="{{annotation}}" field="description">Edit</a>
			</div>
		</div>
		<div class="control">
			<textarea class="textarea locked" readonly placeholder="Description" rows="0" annotation="{{annotation}}" field="description" original="{{description}}">{{description}}</textarea>
		</div>
	</div>
	{{#if nodes}}
	<div class="field">
		<div class="label-container">
			<label class="label" annotation="{{annotation}}" field="table">Elements</label>
			<div class="button-group">
				<a class="button is-warning edit" annotation="{{annotation}}" field="table">Edit</a>
			</div>
		</div>
		<table class="table is-fullwidth is-hoverable" annotation="{{annotation}}" field="table">
			<thead>
				<th>Annotation</th>
				<th>Type</th>
				<th>Description</th>
				<th><a class="button add-element" disabled annotation="{{annotation}}"><i class="fa fa-plus"></i></a></th>
			</thead>
			<tbody>
				{{#each nodes}}
					{{> tableRow}}
				{{/each}}
			</tbody>
		</table>
	</div>
	{{/if}}
</div>
{{#each nodes}}
	{{> leftNavContentPartial}}
{{/each}}
{{/if}}
